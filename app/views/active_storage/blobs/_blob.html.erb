<figure class="attachment attachment--<%= blob.representable? ? "preview" : "file" %> attachment--<%= blob.filename.extension %>">
  <% if blob.video? %>
    <%= video_tag rails_public_blob_url(blob), preload: "auto", controls: "controls", class: "attachment__video max-h-[600px] mx-auto" %>
  <% elsif blob.representable? %>
    <% if blob.content_type == "image/gif" %>
      <%= image_tag rails_public_blob_url(blob), alt: "Uploaded image" %>
    <% else %>
      <%
        width = local_assigns[:in_gallery] ? 800 : 1600
        height = local_assigns[:in_gallery] ? 600 : 1200
      %>
      <%= resized_image_tag(blob,
        resize: {
          width: width,
          height: height,
          format: :webp,
          quality: 90
        },
        alt: "Uploaded image") %>
    <% end %>
  <% end %>
</figure>
