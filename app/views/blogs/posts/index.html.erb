<%= render "blogs/header" %>

<% if @posts.empty? %>
  <p class="text-center">
    Nothing to read on this blog yet âœ¨
  </p>
  <p class="mt-4 text-center">
    To be notified of new posts, subscribe to the
    <%= link_to "RSS feed", blog_posts_path(name: @blog.name, format: :rss),
        class: "font-semibold underline" %>
  </p>
<% else %>

  <% if @blog.stream_layout? %>
    <%= render "posts_stream" %>
  <% else %>
    <%= render "posts_titles" %>
  <% end %>
<% end %>
