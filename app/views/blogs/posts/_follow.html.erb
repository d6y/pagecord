<% if logged_in? && @blog != Current.user.blog %>
  <div class="text-xs inline-block border text-slate-500 dark:text-slate-400 hover:text-slate-800 hover:dark:text-slate-300 dark:border-slate-500 rounded-xl px-2 py-1 hover:bg-slate-100 hover:dark:bg-slate-700 text-center">
    <%= turbo_frame_tag "#{dom_id(@blog)}-follow-button" do %>
      <%= render partial: "blogs/follow_button", locals: { blog: @blog } %>
    <% end %>
  </div>
<% end %>