<div class="flex items-center gap-x-1">
  <%= link_to new_post_reply_path(post),
              title: "Reply to this post via email",
              class: "flex",
              data: { turbo: false } do %>
    <%= inline_svg_tag "icons/reply.svg", class: "cursor-pointer text-slate-400 hover:text-slate-600 dark:hover:text-slate-300 w-4 h-4" %>
  <% end %>

  <% if upvoted_by_current_viewer?(post) %>
    <%= form_with url: post_upvote_path(post, @upvote), method: :delete, data: { controller: "form-submit" }, class: "flex" do |form| %>
      <%= button_tag type: "submit", data: { action: "form-submit#submit" }, title: "You liked this post ðŸ˜Š" do %>
        <%= inline_svg_tag "icons/heart.svg", class: "cursor-pointer text-red-500 w-5 h-5" %>
      <% end %>
    <% end %>
  <% else %>
    <%= form_with url: post_upvotes_path(post), method: :post, data: { controller: "form-submit" }, class: "flex" do |form| %>
      <%= button_tag type: "submit", data: { action: "form-submit#submit" }, title: "Click to like this post" do %>
        <%= inline_svg_tag "icons/heart.svg", class: "cursor-pointer dark:text-slate-500 text-slate-300 w-5 h-5" %>
      <% end %>
    <% end %>
  <% end %>
</div>
