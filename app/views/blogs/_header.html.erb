<div class="section">
  <%= render "blogs/social_links" %>

  <% if @blog.social_links.present? %>
    <div class="mt-4">
  <% else %>
    <div class="mt-12">
  <% end %>

  <% if @blog.avatar&.attached? %>
    <%= render "blogs/avatar_header" %>
  <% else %>
    <%= render "blogs/no_avatar_header" %>
  <% end %>
  </div>

  <% if @blog.bio.present? && !local_assigns[:hide_bio] %>
  <div class="mt-4 text-sm prose text-subtle break-words">
    <%= auto_link @blog.bio %>
  </div>
  <% end %>

  <%= render "blogs/email_subscriber_form" unless local_assigns[:hide_email_form] %>
</div>
