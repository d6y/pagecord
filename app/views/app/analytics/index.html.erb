<!-- Container for analytics content and overlay -->
<div class="relative">
  <!-- Analytics Content (shown for everyone, blurred for non-premium) -->
  <div class="<%= 'pointer-events-none select-none opacity-30' unless Current.user.subscribed? %> space-y-6">
    <!-- View Type Navigation -->
    <div class="bg-slate-50 dark:bg-slate-800 rounded-lg p-4 space-y-3 md:space-y-0">
      <!-- Mobile: Stacked Layout, Desktop: Side by Side -->
      <div class="flex flex-col md:flex-row md:items-center md:justify-between space-y-3 md:space-y-0">
        <!-- View Type Buttons -->
        <div class="flex space-x-2 justify-center md:justify-start">
          <%
            # Context-aware dates for view switching (simplified for demo)
            context_day = @date
            context_month = @date.beginning_of_month
            context_year = @date.beginning_of_year
          %>

          <span class="px-3 py-1 rounded text-sm font-medium <%= @view_type == 'day' ? 'bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200' : 'text-slate-600 dark:text-slate-400' %>">Day</span>
          <span class="px-3 py-1 rounded text-sm font-medium <%= @view_type == 'month' ? 'bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200' : 'text-slate-600 dark:text-slate-400' %>">Month</span>
          <span class="px-3 py-1 rounded text-sm font-medium <%= @view_type == 'year' ? 'bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200' : 'text-slate-600 dark:text-slate-400' %>">Year</span>
        </div>

        <!-- Date Navigation -->
        <div class="flex items-center justify-between md:justify-end">
          <!-- Date navigation arrows and display -->
          <div class="flex items-center space-x-2">
            <div class="p-1 rounded text-slate-600 dark:text-slate-400">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
              </svg>
            </div>

            <span class="text-sm font-medium text-slate-900 dark:text-slate-100 min-w-[120px] text-center">
              <%= @date.strftime("%B %Y") %>
            </span>

            <div class="p-1 rounded text-slate-600 dark:text-slate-400">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Metrics Card -->
    <div class="bg-white dark:bg-slate-800 rounded-lg border border-slate-200 dark:border-slate-700 p-6">
      <h3 class="text-sm font-medium text-slate-500 dark:text-slate-400">Page Views</h3>
      <p class="text-3xl font-bold text-slate-900 dark:text-slate-100 mt-2">
        <%= format_number(@analytics_data[:unique_page_views]) %>
      </p>
    </div>

    <%= render 'chart' %>

    <%= render 'leaderboard' %>
  </div>

  <%= render 'premium_overlay' unless Current.user.subscribed? %>
</div>
