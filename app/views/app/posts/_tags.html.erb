<% if post&.tag_list.present? %>
  <div class="flex flex-wrap gap-1 mt-1">
    <% post.tag_list.each do |tag| %>
      <span class="inline-flex items-center px-2 py-1 text-xs font-medium bg-slate-100 text-slate-800 rounded-md dark:bg-slate-800 dark:text-slate-200">
        <%= tag %>
      </span>
    <% end %>
  </div>
<% end %>
