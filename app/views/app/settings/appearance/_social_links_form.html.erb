<fieldset class="flex pb-4 gap-x-2 items-center w-full">
  <%= form.hidden_field :_destroy %>

  <%= form.select :platform, SocialLink::PLATFORMS, {},
    class: "w-48 placeholder-slate-300 dark:placeholder-slate-600 dark:bg-slate-900 border border-slate-300 dark:border-slate-600 text-slate-800 dark:text-slate-200 rounded-lg",
    data: {
      "social-links-target": "platform",
      "action": "change->social-links#handlePlatformChange"
    } %>

  <%= form.text_field :url,
    class: "w-full placeholder-slate-400 dark:placeholder-slate-600 dark:bg-slate-900 border border-slate-300 dark:border-slate-600 text-slate-800 dark:text-slate-200 rounded-lg",
    placeholder: "Enter full URL e.g. https://example.com" %>

  <%= link_to "#", class: "align-middle", data: { action: "click->social-links#removeLink" } do %>
    <%= inline_svg_tag "icons/trash.svg", class: "w-5 h-5 text-slate-400 hover:text-slate-800 dark:text-slate-500 dark:hover:text-slate-200" %>
  <% end %>
</fieldset>