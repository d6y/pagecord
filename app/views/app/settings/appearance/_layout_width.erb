<div class="mt-4 mb-8">
  <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
    <div class="border border-slate-200 dark:border-slate-700 rounded-lg relative">
      <%= form.radio_button :width, "narrow",
        checked: @blog.width == "narrow",
        class: "sr-only peer",
        id: "width_narrow" %>
      <label for="width_narrow"
        class="flex flex-col rounded-lg border-2 border-transparent p-3 cursor-pointer
               peer-checked:border-sky-500 dark:peer-checked:border-sky-600
               hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors">
        <div class="mb-2 w-full flex justify-center">
          <div class="w-1/3 h-12 bg-slate-300 dark:bg-slate-600 rounded shadow-sm"></div>
        </div>
        <div class="text-center font-medium text-slate-700 dark:text-slate-300">Narrow</div>
      </label>
    </div>

    <div class="border border-slate-200 dark:border-slate-700 rounded-lg relative">
      <%= form.radio_button :width, "standard",
        checked: @blog.width == "standard",
        class: "sr-only peer",
        id: "width_standard" %>
      <label for="width_standard"
        class="flex flex-col rounded-lg border-2 border-transparent p-3 cursor-pointer
               peer-checked:border-sky-500 dark:peer-checked:border-sky-600
               hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors">
        <div class="mb-2 w-full flex justify-center">
          <div class="w-1/2 h-12 bg-slate-300 dark:bg-slate-600 rounded shadow-sm"></div>
        </div>
        <div class="text-center font-medium text-slate-700 dark:text-slate-300">Standard</div>
      </label>
    </div>

    <div class="border border-slate-200 dark:border-slate-700 rounded-lg relative">
      <%= form.radio_button :width, "wide",
        checked: @blog.width == "wide",
        class: "sr-only peer",
        id: "width_wide" %>
      <label for="width_wide"
        class="flex flex-col rounded-lg border-2 border-transparent p-3 cursor-pointer
               peer-checked:border-sky-500 dark:peer-checked:border-sky-600
               hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors">
        <div class="mb-2 w-full flex justify-center">
          <div class="w-5/6 h-12 bg-slate-300 dark:bg-slate-600 rounded shadow-sm"></div>
        </div>
        <div class="text-center font-medium text-slate-700 dark:text-slate-300">Wide</div>
      </label>
    </div>
  </div>
</div>
