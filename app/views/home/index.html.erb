          <th class="text-center">
            <span class="font-normal text-base py-1 px-2 text-slate-600 dark:bg-slate-600 dark:text-slate-300 bg-yellow-100 rounded">$<%= Subscription.price %> per year!</span>
          </th>
        </tr>

        <tr>
          <th class="text-left"></th>
          <th class="text-center">
            <%= link_to new_signup_path do %>
